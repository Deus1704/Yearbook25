# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration
# Set to 'true' to use MongoDB, 'false' to use SQLite
USE_MONGODB=true
MONGODB_URI=mongodb://localhost:27017/yearbook25

# Google Drive Configuration
# The folder ID from Google Drive where files will be stored
GOOGLE_DRIVE_FOLDER_ID=<your-google-drive-folder-id>

# Google Drive credentials
# For production, paste the entire contents of your credentials.json file here
# ***REMOVED***,"project_id":"..."}

# Backup Configuration
# Set to 'true' to enable automatic backups
ENABLE_AUTO_BACKUPS=true
# Backup interval in hours (can be fractional, e.g., 0.25 for 15 minutes)
BACKUP_INTERVAL_HOURS=0.25  # 15 minutes
# Set to 'true' to automatically restore from the most recent backup on startup
ENABLE_AUTO_RESTORE=true

# CORS Configuration
# Set to 'true' to allow all origins (development only)
CORS_ALLOW_ALL=false

# Render.com specific environment variables
RENDER=false
RENDER_SERVICE_NAME=yearbook25-backend
RENDER_REGION=oregon
